<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:text="New Order"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/ordernumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="45dp"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:textStyle="bold"
        android:text="Order Number:" />

    <TextView
        android:id="@+id/orderdate"
        android:layout_below="@+id/ordernumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ordernumber"
        android:layout_marginTop="30dp"
        android:text="Order Date:"
        android:textStyle="bold" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ordertime"
        android:layout_below="@id/orderdate"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderdate"
        android:layout_marginTop="30dp"
        android:text="Order Time:"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderquantity"
        android:layout_below="@id/ordertime"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ordertime"
        android:layout_marginTop="30dp"
        android:text="Order Quantity:"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderamount"
        android:layout_below="@id/orderquantity"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderquantity"
        android:layout_marginTop="30dp"
        android:text="Order Amount:"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/merchantid"
        android:layout_below="@id/orderamount"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderamount"
        android:layout_marginTop="30dp"
        android:text="Merchant id"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cusineid"
        android:layout_below="@id/merchantid"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/merchantid"
        android:layout_marginTop="30dp"
        android:text="Cusine Id"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customername"
        android:layout_below="@id/cusineid"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cusineid"
        android:layout_marginTop="30dp"
        android:text="Customer name"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customeraddress"
        android:layout_below="@id/customername"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customername"
        android:layout_marginTop="30dp"
        android:text="Customer address"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customermobile"
        android:layout_below="@id/customeraddress"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customeraddress"
        android:layout_marginTop="30dp"
        android:text="Customer number"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/picked"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delivered"/>


    <Button
        android:id="@+id/merchant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Merchant Direction"
        android:layout_below="@id/customermobile"
        android:layout_marginTop="30dp"/>


    <Button
        android:id="@+id/picking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="pickk"
        android:layout_below="@id/merchant"
        android:layout_marginTop="30dp"/>




    <!--<Button
        android:id="@+id/direction"
        android:layout_below="@id/picking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Direction"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>-->

        </RelativeLayout>
        </ScrollView>